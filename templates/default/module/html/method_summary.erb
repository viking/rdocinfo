<% if method_listing.size > 0 %>
  <% scopes(method_listing) do |list, scope| %>
    <h2>
      <%= scope.to_s.capitalize %> Method Summary
      <small>(<a href="#" class="summary_toggle">collapse</a>)</small>
    </h2>

    <ul class="summary">
      <% list.each do |meth| %>
        <%= yieldall :item => meth %>
      <% end %>
    </ul>
  <% end %>
<% end %>